<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:transitionName="@string/container_transition">

    <ImageView
        android:id="@+id/ivDetailsIcon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/details_image_height"
        android:layout_marginBottom="@dimen/details_item_margin"
        android:scaleType="centerCrop"
        android:transitionName="@string/icon_transition" />

    <TextView
        android:id="@+id/tvDetailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/details_item_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/details_text_size"
        android:transitionName="@string/name_transition"
        tools:text="Doggo One" />

    <TextView
        android:id="@+id/tvDetailsAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/details_text_size"
        tools:text="3 y.o." />


</LinearLayout>